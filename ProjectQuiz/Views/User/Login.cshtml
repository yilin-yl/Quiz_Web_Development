            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col">

            </div>
        </div>*@
        <br />
        <button type="submit" class="btn btn-primary" style="width:150px">Login</button>

        <a asp-controller="User" asp-action="Register" class="btn btn-secondary" style="width: 150px">
            Register
        </a>

    </form>
</div>
